{
  "name": "spotify-f2p",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces foreach -vp run build",
    "build:watch": "yarn workspaces foreach -vp run build:watch",
    "compile": "tsc --build",
    "compile:watch": "tsc --build --watch",
    "ddb:admin": "DYNAMO_ENDPOINT=http://localhost:8000 dynamodb-admin",
    "deploy": "serverless deploy --stage prod",
    "dev:frontend": "yarn workspace @spotify-f2p/frontend dev",
    "dev:sls": "serverless offline start",
    "postinstall": "sls dynamodb install",
    "start": "concurrently 'yarn:dev:*' 'yarn:*:watch' 'yarn:ddb:admin'"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "dynamodb-admin": "^4.5.0",
    "esbuild": "^0.17.19",
    "serverless": "^3.31.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^8.7.0",
    "serverless-s3-deploy": "^0.10.1",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.2.0"
}