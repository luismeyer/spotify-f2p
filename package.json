{
  "name": "spotify-f2p",
  "version": "1.0.0",
  "description": "",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start": "sam local start-api",
    "invoke": "sam local invoke --no-event",
    "watch": "tsc --build --watch",
    "deploy": "sam deploy",
    "deploy:new": "sam deploy --guided",
    "build": "tsc --build",
    "encrypt": "gpg --symmetric --cipher-algo AES256 secrets/.env",
    "decrypt": "gpg --decrypt --output secrets/.env secrets/.env.gpg",
    "lint": "tslint 'packages/**/*.{ts,tsx}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
