{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "compile": {
      "dependsOn": ["^compile"],
      "inputs": ["src/**"],
      "outputs": ["lib/**"]
    },
    "compile:watch": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**"],
      "outputs": ["lib/**"]
    },
    "build": {
      "dependsOn": ["^build", "compile"],
      "inputs": ["src/**"],
      "outputs": ["build/**"]
    },
    "build:watch": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**"],
      "outputs": ["build/**"]
    },
    "deploy": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "ddb:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
