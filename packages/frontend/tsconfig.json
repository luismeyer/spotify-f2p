{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true
  },
  "include": ["src"],
  "references": [{ "path": "../api" }]
}
